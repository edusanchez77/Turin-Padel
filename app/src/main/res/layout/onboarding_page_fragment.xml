<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecases.onboarding.page.OnboardingPageFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageViewOnboarding"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/logo_white" />

        <!--
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageViewOnboarding"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:lottie_rawRes="@drawable/logo_white"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
            -->

        <TextView
            android:id="@+id/textViewOnboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Title text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewOnboardingBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Body text"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>